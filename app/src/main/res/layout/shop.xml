<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="horizontal"
    android:layout_width="fill_parent" android:id="@+id/LinearLayoutItem"
    android:weightSum="1">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:layout_margin="5dip" android:id="@+id/TextViewShop"
        android:textSize="26dip" android:text="Shop Name" android:textColor="#000000"
        android:minLines="2" android:maxWidth="150dip"></TextView>
    <TextView android:id="@+id/TextViewShop01" android:layout_width="26dp"
        android:layout_height="32dp"
        android:layout_weight="0.98"></TextView>
    <CheckBox android:layout_height="wrap_content"
        android:layout_margin="5dip" android:id="@+id/ShopCheckBoxSelected"
        android:focusable="false" android:clickable="false"
        android:layout_width="wrap_content"></CheckBox>
</LinearLayout>